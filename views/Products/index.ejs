<div class="container-fluid">
  <div class=row>
    <div class="col col-md-12">
      <a href="products/create" class="btn btn-primary new">
        Create a new Product
      </a>
      <h2>Recent Product entries</h2>
      <p>There are
        <%= products.query.length %> products.
        <br />
      </p>
      <% for (var i = products.query.length-1; i >= 0; i--) {   
        product = products.query[i];   %>
      <div class="panel panel-default">
        <div class="panel-heading"></div>
        <div class="text-muted pull-right"></div>
        <div class="panel-body">
          ID:
          <%=  product._id %>
          <br> Name:
          <%=product.productName%>
          <br /> Description:
          <%=product.productDescription%>
          <br /> Category:
          <%=product.productCategory%>
          <br /> Price:
          <%=product.productPrice%>
          <br />
          <br />
          <a href="/products/delete/<%= product._id  %>" class="btn btn-danger"> Delete </a>
          <a href="/products/details/<%= product._id %>" class="btn btn-info"> Details </a>
          <a href="/products/edit/<%= product._id %>" class="btn btn-warning"> Edit </a>
        </div>
      </div>
      <% } %>

    </div>
  </div>
</div>